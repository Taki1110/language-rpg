    // ============================================
    // ユーティリティ関数
    // ============================================
    
    // 全単語をフラットな配列で取得
    getAllWords() {
        const allWords = [];
        
        // 初級
        Object.values(this.beginner).forEach(category => {
            allWords.push(...category.map(w => ({ ...w, level: 'beginner' })));
        });
        
        // 中級
        Object.values(this.intermediate).forEach(category => {
            allWords.push(...category.map(w => ({ ...w, level: 'intermediate' })));
        });
        
        // 上級
        Object.values(this.advanced).forEach(category => {
            allWords.push(...category.map(w => ({ ...w, level: 'advanced' })));
        });
        
        return allWords;
    },
    
    // レベル別に単語を取得
    getWordsByLevel(level) {
        if (this[level]) {
            const words = [];
            Object.values(this[level]).forEach(category => {
                words.push(...category.map(w => ({ ...w, level })));
            });
            return words;
        }
        return [];
    },
    
    // ランダムに単語を取得
    getRandomWords(count, level = null) {
        let words;
        if (level) {
            words = this.getWordsByLevel(level);
        } else {
            words = this.getAllWords();
        }
        
        // シャッフルして指定数返す
        const shuffled = [...words].sort(() => Math.random() - 0.5);
        return shuffled.slice(0, Math.min(count, shuffled.length));
    },
    
    // クイズ用の選択肢を生成
    generateQuizOptions(correctWord, count = 4, level = null) {
        const options = [correctWord];
        let words;
        
        if (level) {
            words = this.getWordsByLevel(level).filter(w => 
                w.en !== correctWord.en && w.cn !== correctWord.cn
            );
        } else {
            words = this.getAllWords().filter(w => 
                w.en !== correctWord.en && w.cn !== correctWord.cn
            );
        }
        
        // ランダムに選択
        const shuffled = [...words].sort(() => Math.random() - 0.5);
        options.push(...shuffled.slice(0, count - 1));
        
        // シャッフルして返す
        return options.sort(() => Math.random() - 0.5);
    },
    
    // 単語数をカウント
    countWords() {
        let beginner = 0;
        let intermediate = 0;
        let advanced = 0;
        
        Object.values(this.beginner).forEach(cat => beginner += cat.length);
        Object.values(this.intermediate).forEach(cat => intermediate += cat.length);
        Object.values(this.advanced).forEach(cat => advanced += cat.length);
        
        return {
            beginner,
            intermediate,
            advanced,
            total: beginner + intermediate + advanced
        };
    }
};

